@{
    Layout="Shared/_Layout.cshtml";
}

<h1>Add a Venue for @Model.Name to Play at</h1>

@if(Model.GetUnrelatedVenues().Count <= 0)
{
    <h2>There are no more venues that can be added to this band.</h2>
}
else
{
    <form action="/band/@Model.Id/new_venue" method="post">
        <div class="form-group">
            <span>Venue: </span>
            <select name="venue-id">
            @foreach (var venue in Model.GetUnrelatedVenues())
            {
                <option value="@venue.Id">@venue.Name</option>
            }
            </select>
        </div>
        <button type="submit" class="btn btn-default">Add venue</button>
    </form>
}

<div class="footer-links">
    <h4><a href="/venues">Click here to view all venues.</a></h4>
    <h4><a href="/venues/new">Click here to add a new venue.</a></h4>
    <h4><a href="/">Click here to return to the homepage without adding a venue.</a></h4>
</div>
