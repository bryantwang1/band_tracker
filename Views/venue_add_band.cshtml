@{
    Layout="Shared/_Layout.cshtml";
}

<h1>Add a Band for @Model.Name to Host</h1>

@if(Model.GetUnrelatedBands().Count <= 0)
{
    <h2>There are no more bands that can be added to this venue.</h2>
}
else
{
    <form action="/venue/@Model.Id/new_band" method="post">
        <div class="form-group">
            <span>Band: </span>
            <select name="band-id">
            @foreach (var band in Model.GetUnrelatedBands())
            {
                <option value="@band.Id">@band.Name</option>
            }
            </select>
        </div>
        <button type="submit" class="btn btn-default">Add band</button>
    </form>
}

<div class="footer-links">
    <h4><a href="/venues">Click here to view all venues.</a></h4>
    <h4><a href="/bands/new">Click here to add a new band.</a></h4>
    <h4><a href="/">Click here to return to the homepage without adding a band.</a></h4>
</div>
