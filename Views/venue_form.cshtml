@{
    Layout="Shared/_Layout.cshtml";
}

<h1>Add a Venue</h1>

<form action="/venues/new/" method="post">
    <div class="form-group">
        <label for="venue-name">Name: </label>
        <input type="text" name="venue-name" id="venue-name" placeholder="Staples Center" required autofocus>
    </div>
    <div class="form-group">
        <label for="venue-location">Location: </label>
        <input type="text" name="venue-location" id="venue-location" placeholder="Los Angeles, CA" pattern=".+,\s*[A-Z]{2}" title="Required format is City Name, State Abbreviation" required>
    </div>
    <button type="submit" class="btn btn-default">Add Venue</button>
</form>

<div class="footer-links">
    <h4><a href="/">Click here to return to the homepage without adding a venue.</a></h4>
</div>
