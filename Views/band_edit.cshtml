@{
    Layout="Shared/_Layout.cshtml";
}

<h1>Edit a Band</h1>

<form action="/band/edit/@Model.Id" method="post">
    <input type="hidden" name="_method" value="PATCH">
    <input name="band-id" type="hidden" value="@Model.Id">
    <div class="form-group">
        <label for="band-name">Name: </label>
        <input type="text" name="band-name" id="band-name" placeholder="nano.RIPE" value="@Model.Name" required autofocus>
    </div>
    <div class="form-group">
        <label for="band-description">Description: </label>
        <textarea type="text" name="band-description" id="band-description" placeholder="A Japanese pop rock band with two core members." required>@Model.Description</textarea>
    </div>
    <button type="submit" class="btn btn-default">Edit Band</button>
</form>

<div class="footer-links">
    <h4><a href="/">Click here to return to the homepage without editing this band.</a></h4>
</div>
