@{
    Layout="Shared/_Layout.cshtml";
}

<h1>Your Band Tracker</h1>
@if(Model.Count <= 0)
{
    <h3>You're not tracking any bands yet!</h3>
}
else
{
    <h2>Tracked Bands: </h2>
    @foreach(var band in Model)
    {
        <h3><a href="/stylist/@band.Id">@band.Name</a></h3>
    }
}

<div class="footer-links">
    <h4><a href="/venues/new">Click here to add a new venue.</a></h4>
    <h4><a href="/bands/new">Click here to add a new band.</a></h4>
    <h4><a href="/venues">Click here to view all venues.</a></h4>
</div>
